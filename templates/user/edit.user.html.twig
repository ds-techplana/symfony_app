{% extends 'main/base.html.twig' %}

{% block body %}
    <h1>Users</h1>
    <div class="row">
        <div class="col-12">
            <form action="{{ path('userEdit') }}" method="post">
                <div class="form-group">
                    <label for="id">Name</label>
                    <input value="{{ user.id }}" type="text" class="form-control" id="id" name="id"
                           hidden>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input value="{{ user.name }}" type="text" class="form-control" id="name" name="name"
                           placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input value="{{ user.email }}" type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="role">Role</label>
                    <select class="form-control" name="role" required>
                        {% for role in roles %}
                            {% if user.role.id == role.id %}
                            <option selected id="role" name="role" value="{{ role.id }}">{{ role.name }}</option>
                            {% else %}
                            <option id="role" name="role" value="{{ role.id }}">{{ role.name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
{% endblock %}
